# MongoDB Connection String
# استبدل username, password, cluster, database_name بالقيم الحقيقية
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret Key
# استبدل بمفتاح سري عشوائي وقوي
JWT_SECRET_KEY=your_super_secret_jwt_key_here_12345

# Gmail Configuration
# استبدل ببريد Gmail الخاص بك
GMAIL_USER=your.email@gmail.com

# Gmail App Password (ليس كلمة المرور العادية)
# كيفية الحصول عليها: https://support.google.com/accounts/answer/185833
GMAIL_PASS=your_gmail_app_password

# Port (اختياري - Vercel سيضبطه تلقائياً)
PORT=3000
